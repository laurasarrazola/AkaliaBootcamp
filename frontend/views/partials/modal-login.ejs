<div class="modal fade" id="loginModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content akalia-modal">
        <div class="modal-header border-0">
          <h5 class="modal-title">Inicia sesión</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form>
            <div class="mb-3 text-start">
              <label class="form-label">Correo</label>
              <input type="email" class="akalia-input" required>
            </div>
            <div class="mb-3 text-start position-relative">
              <label class="form-label">Contraseña</label>
              <input type="password" class="akalia-input" id="loginPwd" required>
              <span class="toggle-eye" id="toggleLoginPwd"><i class="fa fa-eye"></i></span>
            </div>

            <div class="d-flex justify-content-between mb-3">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="rememberLogin">
                <label class="form-check-label" for="rememberLogin">Recordar contraseña</label>
              </div>
              <a href="#" class="link-akalia">¿Has olvidado la contraseña?</a>
            </div>

            <button type="submit" class="btn btn-terracota w-100 mb-3">Entrar</button>
            <a href="#" class="link-akalia d-block text-start" data-bs-toggle="modal" data-bs-target="#registerModal" data-bs-dismiss="modal">Crear cuenta</a>
          </form>
        </div>
      </div>
    </div>
  </div>