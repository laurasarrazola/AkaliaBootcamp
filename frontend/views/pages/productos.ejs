<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head.ejs'); %>
</head>
<body>
    
<%- include('../partials/modal-login.ejs') %>
<%- include('../partials/navbar.ejs'); %>

    <div class="container mt-5">
        <h1 class="text-center">Catálogo de Productos</h1>
        <div class="row">
            <% categorias.forEach(categoria => { %>
                <div class="col-md-3 mb-4">
                    <div class="card border-danger">
                        <img src="<%= categoria.imagen %>" class="card-img-top card-img-fixed" alt="<%= categoria.nombre %>">
                        <div class="card-body bg-light">
                            <h5 class="card-title"><%= categoria.nombre %></h5>
                            
                            
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

<div class="container mt-5">
        <h1 class="text-center">Catálogo de Productos</h1>
        <div class="row">
            <% products.forEach(producto => { %>
                <div class="col-md-3 mb-4">
                    <div class="card border-danger">
                        <img src="<%= producto.imagen %>" class="card-img-top card-img-fixed" alt="<%= producto.nombre %>">
                        <div class="card-body bg-light">
                            <h5 class="card-title"><%= producto.nombre %></h5>
                            <p class="card-text"><%= producto.descripcion %></p>
                            <p class="card-text font-weight-bold">$<%= producto.precio.toFixed(2) %></p>
                            <button class="btn btn-danger" onclick="agregarAlCarrito('<%= producto._id %>')">Agregar al Carrito</button>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
    
     <section class="container-fluid d-flex flex-column align-items-center justify-content-center ">
        <h2>Productos destacados</h2>
        <div class="row">

          <% products.forEach(producto => { %>
        <div class="col-11 col-sm-6 col-md-4 col-lg-3 mb-4  d-flex justify-content-center" style=" height: 350px" >
  <article class="card rounded-0 border-0 " >
    <img src="<%= ./Design assets/categoria-cuero-marroquineria.jpg %>" class="card-img-top img-fluid h-100 rounded-0" alt="<%= Imagen del producto %>"  />
    <div class="card-body">
      <h5 class="card-title mb-1"><%= producto.nombre %></h5>
      <p class="card-text text-muted mb-2"><%= producto.descripcion %></p>
      <p class="fw-semibold text-dark"><%= producto.precio %></p>
    </div>
    </div>
  </article>
  <% }); %>
</div>
      </section>



    <%- include('../partials/footer.ejs'); %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
    <script src="/js/login.js"></script>

    <script src="/lib/js/bootstrap.min.js"></script>
  <script src="/lib/splide/js/splide.min.js"></script>
  <script src="/scripts/index.js"></script>
  <script src="/scripts/partials.js"></script>
  <script src="/scripts/modal.js"></script>
  <script src="/scripts/login.js" defer></script>
  <script src="/scripts/register.js"></script>
</body>
</html>