<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>Contáctanos | Akalia</title>
    <%- include('../partials/head.ejs'); %>
</head>

<body class="h-100 m-0 d-flex flex-column vh-100">
    <%- include('../partials/navbar.ejs'); %>
        <main class="container py-5">
            <div
                class="row product-container bg-blanco-light rounded shadow-sm p-4 d-flex justify-content-start mx-auto">
                <div class="row col-11 col-md-6 d-flex align-items-center justify-content-center ">
                    <!-- Miniaturas -->
                    <div class="miniature-container col-2 d-flex flex-column align-items-center gap-2">
                        <% imagenes.forEach(function(img, i) { %>
                            <img src="<%= img.urlImagen %>" class="img-thumbnail mb-2"
                                style="width: 70px; height: 70px; object-fit: cover; cursor:pointer;"
                                alt="Miniatura <%= i+1 %>">
                            <% }) %>
                    </div>
                    <div class="col-10 d-flex flex-column align-items-center justify-content-center">
                        <img src="<%= imagenes[0].urlImagen %>" class="img-fluid rounded mb-3"
                            alt="<%= producto.nombre %>">
                    </div>
                    <!-- Imagen principal + Info del artesano + Redes sociales -->
                </div>
                <!-- Info producto -->
                <div class="col-6">
                    <h2 class="fw-bold mb-2">
                        <%= producto.tituloProducto %>
                    </h2>
                    <h3 class="text-vinotinto mb-3">$ <%= producto.precio %>
                    </h3>
                    <h5 class="mb-2">Descripción:</h5>
                    <p class="mb-3">
                        <%= producto.descripcionProducto %>
                    </p>
                    <div class="mb-3">
                        <span class="fw-semibold text-muted">Categoría:</span>
                        <% if (categoriaP && categoriaP.length) { %>
                            <% categoriaP.forEach(categoria=> { %>
                                <span class="text-dark">
                                    <%= categoria.nombreCategoria %>
                                </span>)
                                <% }); %>
                                    <% } else { %>
                                        <span class="text-dark">Sin categoría</span>
                                        <% } %>
                    </div>
                </div>

                <div class="col-8 d-flex col-md-5 flex-column align-items-center justify-content-center">

                    <!-- Hecho por -->
                    <div class="d-flex flex-column align-items-center justify-content-center">
                        <div class="mb-3 d-flex align-items-center gap-2">
                            <img src="/img/icons/hand.svg" alt="Hecho por" style="width:24px;">
                            <span class="text-dark">Hecho por <%= emprendimiento.nombreEmprendimiento %></span>
                        </div>

                        <!-- Redes sociales -->
                        <div class="mb-3 text-center d-flex flex-column align-items-center ">
                            <span class="fw-semibold text-verde d-block">Redes Sociales</span>
                            <div class="d-flex row gap-3 justify-content-start mt-2">

                                <% if(redSocial.nombreRedSocial[0]) { %>
                                    <div class="d-flex justify-content-start align-items-center gap-2"><i class="fab fa-whatsapp"></i> <a href="https://wa.me/<%= redSocial.url[0] %>"
                                            target="_blank">whatsapp/<%= redSocial.url %></a></div>
                                    <% } %>
                                        <% if(redSocial.nombreRedSocial[1]) { %>
                                            <div class="d-flex justify-content-start align-items-center gap-2"><i class="fab fa-facebook"></i> <a
                                                    href="https://facebook.com/<%= redSocial.facebook %>"
                                                    target="_blank">facebook/<%= redSocial.url[1] %></a></div>
                                            <% } %>
                                                <% if(redSocial.nombreRedSocial[2]) { %>
                                                    <div class="d-flex justify-content-start align-items-center gap-2"><i class="fab fa-instagram"></i> <a
                                                            href="https://instagram.com/<%= redSocial.instagram %>"
                                                            target="_blank">instagram/<%= redSocial.url[2] %>
                                                        </a></div>
                                                    <% } %>
                                                        <div class="mt-4 d-flex align-items-center gap-2">
                                                            <i class="fas fa-share-alt"></i>
                                                            <button class="btn btn-explorar"
                                                                onclick="navigator.clipboard.writeText(window.location.href)">Compartir
                                                                publicación</button>
                                                        </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <%- include('../partials/footer.ejs'); %>
            <script src="/lib/js/bootstrap.min.js.map"></script>
            <script src="/lib/js/bootstrap.bundle.min.js"></script>
            <script src="/js/productos.js"> </script>
            <script src="/js/login_signup.js"></script>
            <!-- Bootstrap + FontAwesome -->
            <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>

</body>
<%- include('../partials/modal-login.ejs'); %>
    <%- include('../partials/modal-signup.ejs'); %>

</html>