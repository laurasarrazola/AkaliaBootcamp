<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>Contáctanos | Akalia</title>
    <%- include('../partials/head.ejs'); %>
</head>

<body class="h-100 m-0 d-flex flex-column vh-100">
    <%- include('../partials/navbar.ejs'); %>
        <main class="container py-5">
            <div class="row bg-blanco-light rounded shadow-sm p-4">
                <!-- Miniaturas -->
                <div class="col-2 d-flex flex-column align-items-center gap-2">
                    <% producto.imagenes.forEach(function(img, i) { %>
                        <img src="<%= img %>" class="img-thumbnail mb-2"
                            style="width: 70px; height: 70px; object-fit: cover; cursor:pointer;"
                            alt="Miniatura <%= i+1 %>">
                        <% }) %>
                </div>
                <!-- Imagen principal + Info del artesano + Redes sociales -->
                <div class="col-5 d-flex flex-column align-items-center justify-content-center">
                    <img src="<%= producto.imagenPrincipal %>" class="img-fluid rounded mb-3"
                        style="max-height:350px; object-fit:cover;" alt="<%= producto.nombre %>">

                    <!-- Hecho por -->
                    <div class="mb-3 d-flex align-items-center gap-2">
                        <img src="/img/icons/hand.svg" alt="Hecho por" style="width:24px;">
                        <span class="text-dark">Hecho por <%= producto.hechoPor %></span>
                    </div>

                    <!-- Redes sociales -->
                    <div class="mb-3 text-center">
                        <span class="fw-semibold text-verde d-block">Redes Sociales</span>
                        <div class="d-flex flex-wrap gap-3 justify-content-center mt-2">
                            <% if(producto.redes.whatsapp) { %>
                                <span><i class="fab fa-whatsapp"></i> <a
                                        href="https://wa.me/<%= producto.redes.whatsapp %>" target="_blank">whatsapp/<%=
                                            producto.redes.whatsapp %></a></span>
                                <% } %>
                            <% if(producto.redes.facebook) { %>
                                <span><i class="fab fa-facebook"></i> <a
                                                href="https://facebook.com/<%= producto.redes.facebook %>"
                                                target="_blank">facebook/<%= producto.redes.facebook %></a></span>
                                <% } %>
                            <% if(producto.redes.instagram) { %>
                                <span><i class="fab fa-instagram"></i> <a
                                                        href="https://instagram.com/<%= producto.redes.instagram %>"
                                                        target="_blank">instagram/<%= producto.redes.instagram %>
                                                            </a></span>
                                <% } %>
                            <div class="mt-4 d-flex align-items-center gap-2">
                    <i class="fas fa-share-alt"></i>
                    <button class="btn btn-explorar" onclick="navigator.clipboard.writeText(window.location.href)">Compartir publicación</button>
                </div>
                        </div>
                    </div>
                </div>
                <!-- Info producto -->
                <div class="col-5">
                <h2 class="fw-bold mb-2"><%= producto.nombre %></h2>
                <h3 class="text-vinotinto mb-3">$ <%= producto.precio %></h3>
                <h5 class="mb-2">Descripción:</h5>
                <p class="mb-3"><%= producto.descripcion %></p>
                <div class="mb-3">
                    <span class="fw-semibold text-muted">Categoría:</span>
                    <span class="text-dark"><%= producto.categoria %></span>
                </div>
                
                </div>
            </div>
        </main>
        <%- include('../partials/footer.ejs'); %>
</body>

</html>