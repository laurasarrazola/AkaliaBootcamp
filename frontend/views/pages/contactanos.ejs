<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Contáctanos | Akalia</title>
  <%- include('../partials/head.ejs'); %>
</head>
<body class="h-100 m-0 d-flex flex-column vh-100">
  <%- include('../partials/navbar.ejs'); %>
  <main class="flex-grow-1 d-flex flex-column justify-content-start">
    <section class="container d-flex flex-column align-items-center justify-content-center py-5 ">
      <h3 class="text-center text-negro mb-4">Contáctanos</h3>
      <form class="w-100" style="max-width:400px;">
        <div class="mb-3">
          <label for="mensaje" class="form-label text-negro">Mensaje</label>
          <input type="text" class="form-control" id="mensaje" name="mensaje" placeholder="Escribe tu mensaje aquí">
        </div>
        <div class="mb-3">
          <label for="correo" class="form-label text-negro">Correo electrónico</label>
          <input type="email" class="form-control" id="correo" name="correo" placeholder="tu@email.com">
        </div>
        <button type="submit" class="btn btn-explorar w-100">Enviar</button>
      </form>
    </section>
</main>
<%- include('../partials/footer.ejs'); %>
<script src="/lib/js/bootstrap.min.js.map"></script>
    <script src="/lib/js/bootstrap.bundle.min.js"></script>
    <script src="/js/productos.js"> </script>
    <script src="/js/login_signup.js"></script>
    <!-- Bootstrap + FontAwesome -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>

</body>
<%- include('../partials/modal-login.ejs'); %>
<%- include('../partials/modal-signup.ejs'); %>
</html>
