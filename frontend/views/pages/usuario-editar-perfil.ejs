<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <title>Mi Perfil | Akalia</title>
  <%- include('../partials/head.ejs'); %>
    <link rel="stylesheet" href="/styles/usuario-perfil.css"><!-- Crea este archivo para estilos personalizados -->
</head>

<body class="h-100 m-0 d-flex flex-column vh-100 bg-blanco-light">
  <%- include('../partials/navbar.ejs'); %>
    <div class="d-flex flex-row h-100">
      <%- include('../partials/sidebar.ejs'); %>
        <main class="flex-grow-1 d-flex flex-column justify-content-center align-items-center py-5">
          <section class="usuario-perfil-card">
            <h2 class="usuario-perfil-title">Editar Perfil</h2>
            <div class="usuario-perfil-info">
              <form action="/usuario-editar-perfil/<%= usuario.idPersona %>" method="POST">
                <div class="row mb-3">
                  <div class="col-md-6 mb-3 mb-md-0">
                    <strong class="usuario-perfil-label">Nombres</strong>
                    <input name="nombreUsuario" type="text" class="form-control" value="<%= usuario.nombreUsuario %>">
                  </div>

                  <div class="col-md-6 mb-3 mb-md-0">
                    <strong class="usuario-perfil-label">Apellido</strong>
                    <input name="apellidoUsuario" type="text" class="form-control"
                      value="<%= usuario.apellidoUsuario %>">
                  </div>
                  <div class="col-md-6">
                    <strong class="usuario-perfil-label">Celular</strong>
                    <input name="telefono" type="text" class="form-control" value="<%= usuario.telefono %>">
                  </div>
                  <div class="col-md-6 mb-3 mb-md-0">
                    <strong class="usuario-perfil-label">Correo</strong>
                    <input name="email" type="email" class="form-control" value="<%= usuario.email %>">
                  </div>
                  <div class="col-md-6 mb-3 mb-md-0">
                    <strong class="usuario-perfil-label">Contrase√±a</strong>
                    <input name="contrasena" type="password" class="form-control" value="<%= usuario.contrasena %>">
                  </div>
                </div>

                <div class="d-flex justify-content-end">
                  <button class="btn btn-terracota d-flex align-items-center gap-2 px-4 mb-2" type="submit">
                    <img src="/img/icons/edit.svg" alt="Editar" style="width:1.2rem;"> Guardar Cambios
                  </button>
                </div>
              </form>

            </div>
          </section>
        </main>
    </div>

    <script src="/lib/js/bootstrap.min.js.map"></script>
    <script src="/lib/js/bootstrap.bundle.min.js"></script>
    <script src="/js/perfilUsuario.js"></script>
    <!-- Bootstrap + FontAwesome -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
    <!-- Script personalizado -->


</body>
<%- include('../partials/footer.ejs'); %>

</html>